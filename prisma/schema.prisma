// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_POOL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Page {
  id          Int          @id @default(autoincrement())
  title       String?
  content     String?
  webSrc      String?
  webUrl      String
  user        User         @relation(fields: [userId], references: [id])
  userId      Int
  collections Collection[]

  @@map(name: "pages")
}

model User {
  id          Int          @id @default(autoincrement())
  name        String
  email       String       @unique
  pages       Page[]
  collections Collection[]

  @@map(name: "users")
}

model Collection {
  id        Int    @id @default(autoincrement())
  title     String
  colorCode String
  pages     Page[]
  user      User   @relation(fields: [userId], references: [id])
  userId    Int

  @@map(name: "collections")
}
